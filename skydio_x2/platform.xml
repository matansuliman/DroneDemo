<mujoco model="Skydio X2">

  <asset>
    <texture name="donut_tex" type="2d" file="donut_with_markers.png"/>
    <material name="donut_material" texture="donut_tex" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <body name="platform_body" pos="0 0 0.1">
      <joint name="platform_joint_x" type="slide" axis="1 0 0" damping="5"/>
      <joint name="platform_joint_y" type="slide" axis="0 1 0" damping="5"/>
      <geom name="donut_platform" type="cylinder" size="1.0 0.005" material="donut_material" rgba="1 1 1 1"
        condim="4" friction="1.5 1.5 0.001" solref="0.001 0.2" solimp="0.6 0.95 0.001"/>
    </body>
  </worldbody>

</mujoco>
